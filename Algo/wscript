###############################################################################

import os
import fnmatch
import shutil
import datetime

import waflib

###############################################################################

def options(opt):
	opt.load('compiler_c')

	opt.add_option(
		'--debug',
		action = 'store_true',
		dest = 'debug',
		default = False, 
		help = 'enable compiler debug information'
	)

	opt.recurse('painter_2d')


def configure(conf):
	conf.load('compiler_c')

	conf.env.CFLAGS += ['-std=c99']

	if conf.options.debug:
		conf.env.CFLAGS.append('-g')

	conf.recurse('painter_2d')


def build(bld):
	bld.program(
		source = ['main.c'],
		use = 'painter_2d',
		target = 'algo'
	)

	bld.recurse('painter_2d')

###############################################################################

